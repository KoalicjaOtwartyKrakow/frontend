{
    "ignorePatterns": [
        "public/locales/**/*.json"
    ],
    "plugins": [
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "react-app"
    ],
    "rules": {
        "prettier/prettier": "error",
        "max-len": [
            2,
            {
                "code": 120,
                "tabWidth": 4,
                "ignoreUrls": true
            }
        ]
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "legacyDecorators": true
        },
        "sourceType": "module",
        "useJSXTextNode": false
    },
    "overrides": [
        {
            "files": [
                "**/*.ts?(x)"
            ],
            "rules": {
            }
        }
    ]
}