{
    "plugins": ["prettier"],
    "extends": [
        "react-app"
    ],
    "rules": {
        "prettier/prettier": "error",
        "indent": [
            "error",
            4
        ]
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "legacyDecorators": true
        },
        "sourceType": "module",
        "useJSXTextNode": false
    },
    "overrides": [
        {
            "files": [
                "**/*.ts?(x)"
            ],
            "rules": {
            }
        }
    ]
}